@page "/Authentication/Login"
@layout AuthenticationLayout
@using ClassLibrary.Models

<div>
    <div class="col-12">
        <h2>Inloggen</h2>
        <RadzenCard>

            <label>E-mail</label>
            <RadzenTextBox></RadzenTextBox>

            <label>Wachtwoord</label>
            <RadzenTextBox type="password"></RadzenTextBox>
            <hr />

            <RadzenButton ButtonType="Radzen.ButtonType.Button" Path="Index"  Text="Login"
                          ButtonStyle="Radzen.ButtonStyle.Primary" class="btn-block mr-2" />
            <hr />
            <RadzenLink Path="Authentication/Register" Text="Nieuw account aanmaken"></RadzenLink>
        </RadzenCard>
    </div>
</div>

