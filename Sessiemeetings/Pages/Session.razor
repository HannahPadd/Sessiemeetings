@page "/session"
@using ClassLibrary
  

<h3>Sessie's</h3>

<div class="row">
    <RadzenTextBox Placeholder="Zoek sessie" />
</div>
<hr />

@{ 
    var list = GetList();
}
<RadzenDataList WrapItems="true" AllowPaging="true" Data="@list" TItem="List<string>">
    <Template Context="sessionsList">
        <RadzenCard Style="width:300px;">
            <div class="row">
                <div class="col-md-6">
                    {@for (int i = 0; i <= (list.Length / 3) - 1; i++)
                    {
                    <div>Sessie:</div>
                    <b>@list[1][i]</b>
                    <div>Locatie:</div>
                    <b>@list[2][i]</b>
                    <div style="margin-top:20px">Oderwerp:</div>
                    <b>@list[3][i]</b>
                    <div style="margin-top:20px">Tijd:</div>
                    <b>@list[4][i]</b>
                    <div style="margin-top:20px">Datum:</div>
                    <b>@list[5][i]</b>
                        }
                    }
                </div>
            </div>

        </RadzenCard>
    </Template>
</RadzenDataList>


<div class="row">
    <div class="col-md-6">
        <RadzenLink Path="AddSession" Text="Nieuwe sessie toevoegen"></RadzenLink>
    </div>
</div>

@code {


    public List<string>[] GetList()
    {
        DbConnection getSessionsList = new DbConnection();
        return getSessionsList.GetSessionsList();
    }
}
